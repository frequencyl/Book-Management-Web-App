@model List<Book>
<style>
    body {
        background: url("/images/im6.jpg") center center fixed;
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-color: rgba(255, 255, 255, 0.5); 
    }
</style> 
<body>
<div class="d-flex justify-content-center">
    <h2 style="color:#F2C14E" class="mb-5 fw-bold text-center mx-auto">Books in Category: @ViewData["CategoryName"]</h2>
</div>

<div class="d-flex justify-content-center">
    @foreach (var book in Model)
    {
        <ul>
            <div class="w-25 h-50 p-0 mb-2">
            <div class="card border border-success " style="width: 15rem;">
                <img src="~/images/@book.Image" class="card-img-top" style="max-height: 180px;">
                <div class="card-body" style="background-color:#EDB1B6">
                    <h5 class="card-title">@book.BookName</h5>
                    <li class="list-group-item" style="background-color:#EDB1B6">
                        <small class="text-body-secondary card-text">
                            <div class="accordion accordion-flush " id="accordionFlushExample-@book.Id">
                                <div class="accordion-item">
                                    <h2 style="background-color:#EDB1B6" class="accordion-header"  id="flush-headingDescription-@book.Id">
                                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                                data-bs-target="#flush-collapseDescription-@book.Id" aria-expanded="false" aria-controls="flush-collapseDescription-@book.Id" style="background-color:#EDB1B6">
                                            <small class="fw-bold" >Short Description</small>
                                        </button>
                                    </h2>
                                    <div id="flush-collapseDescription-@book.Id" class="accordion-collapse collapse" aria-labelledby="flush-headingDescription-@book.Id"
                                         data-bs-parent="#accordionFlushExample-@book.Id" style="background-color:#DA727E">
                                        <div class="accordion-body">
                                            <p style="background-color:#DA727E" class="card-text"><small>@book.Description</small></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </small>
                    </li>
                        
                            <li class="list-group-item" style="background-color:#DA727E" >
            <small class="text-body-secondary card-text" >
                <small class="fw-bold">Author: </small>@book.Author
            </small>
        </li>
             <li class="list-group-item" style="background-color:#DA727E">
            <small class="text-body-secondary card-text">
                <small class="fw-bold">Publisher: </small>@book.Publisher
            </small>
        </li>
        <li class="list-group-item" style="background-color:#DA727E">
            <small class="text-body-secondary card-text">
                <small class="fw-bold">Length of Page: </small>@book.Length
            </small><small> pages</small>
        </li>
        <li class="list-group-item" style="background-color:#DA727E">
            <small class="text-body-secondary card-text">
                <small class="fw-bold">Language: </small>@book.Language
            </small>
        </li>
                        <li class="list-group-item" style="background-color:#DA727E">
                            <small class="text-body-secondary card-text">
                                <small class="fw-bold">Price: </small>@book.Price
                            </small><small> $</small>
                        </li>
                    </div>
                </div>
            </div>
        </ul>
    }
</div>
</body>