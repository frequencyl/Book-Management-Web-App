@model Book

<form asp-controller="BookManagement" asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="BookName" class="form-label">Book Name</label>
        <input asp-for="BookName" class="form-control">
        <span asp-validation-for="BookName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <input asp-for="Description" class="form-control">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Author" class="form-label">Author</label>
        <input asp-for="Author" class="form-control">
        <span asp-validation-for="Author" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Length" class="form-label">Length of Page</label>
        <input asp-for="Length" class="form-control">
        <span asp-validation-for="Length" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Publisher" class="form-label">Publisher</label>
        <input asp-for="Publisher" class="form-control">
        <span asp-validation-for="Publisher" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label">Price</label>
        <input asp-for="Price" class="form-control">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Language" class="form-label">Language</label>
        <select asp-for="Language" class="form-control">
            <option value="TR">Türkçe</option>
            <option value="EN">English</option>
            <option value="ES">Español</option>
            <option value="FR">Français</option>
            <option value="DE">Deutsch</option>
            <option value="IT">Italiano</option>
        </select>
        <span asp-validation-for="Language" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CategoryID" class="form-label">Select Category</label>
        <select asp-for="CategoryID" class="form-control">
            <option value="1">Horror</option>
            <option value="2">Romance</option>
            <option value="3">Sci-fi</option>
            <option value="4">Philosophy</option>
            <option value="5">Psychology</option>
        </select>
        <span asp-validation-for="CategoryID" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="File" class="form-label">Upload Image</label>
        <input type="file" id="File" name="File" class="form-control" asp-for="File">
        <span asp-validation-for="File" class="text-danger"></span>
    </div>

    <span asp-validation-summary="All" class="text-danger"></span>

    <button type="submit" class="btn text-light" style="background-color:#834644">Save</button>
</form>
